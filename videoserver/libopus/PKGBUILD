targets=(
  "centos"
  "ubuntu"
)
pkgname="zimbra-libopus"
pkgver="1.3.1"
pkgrel="1"
pkgdesc="Totally open, royalty-free, highly versatile audio codec"
pkgdesclong=(
  "Totally open, royalty-free, highly versatile audio codec"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
section="libs"
priority="important"
sources=(
  "https://archive.mozilla.org/pub/opus/opus-${pkgver}.tar.gz"
)
hashsums=(
  "65b58e1e25b2a114157014736a3d9dfeaad8d41be1c8179866f144a2fb44ff9d"
)

build() {
  cd "${srcdir}/opus-${pkgver}"
  export LDFLAGS="-Wl,-rpath,/opt/zimbra/common/lib"
  export PKG_CONFIG_PATH="/opt/zimbra/common/lib/pkgconfig"

  ./configure --prefix=/opt/zimbra/common \
    --disable-static \
    --enable-custom-modes
  make
}

package() {
  cd "${srcdir}/opus-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/opt/zimbra/common/lib/*.la
}
