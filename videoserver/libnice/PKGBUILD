pkgname="carbonio-libnice"
pkgver="0.1.19"
pkgrel="3"
pkgdesc="An implementation of the IETF's draft ICE (for p2p UDP data streams)"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends__apt=(
  "carbonio-openssl"
)
makedepends__apt=(
  "carbonio-openssl"
  "ninja-build"
  "python3-pip"
)
depends__yum=(
  "carbonio-openssl"
)
makedepends__yum=(
  "meson"
  "ninja-build"
  "openssl-devel"
)
section="libs"
priority="important"
source=(
  "https://github.com/libnice/libnice/archive/${pkgver}.tar.gz"
)
sha256sums=('319502c8346f4295ad4c390fdf0bc2c810548b051005dcfa1f5c24b152daa318')

build__apt() {
  cd "${srcdir}/libnice-${pkgver}"
  export PKG_CONFIG_PATH="/opt/zextras/common/lib/pkgconfig"
  pip3 install meson
  meson \
    --libdir=lib \
    --prefix=/opt/zextras/common build \
    --warnlevel 2 \
    --werror \
    -Dgtk_doc=disabled
  meson compile -C build
}

build__yum() {
  cd "${srcdir}/libnice-${pkgver}"
  export PKG_CONFIG_PATH="/opt/zextras/common/lib/pkgconfig"
  meson \
    --libdir=lib \
    --prefix=/opt/zextras/common build \
    --warnlevel 2 \
    --werror \
    -Dgtk_doc=disabled
  meson compile -C build
}

package() {
  cd "${srcdir}/libnice-${pkgver}"
  DESTDIR="${pkgdir}" meson install -C build/
  # rm -rf "${pkgdir}"/opt/zextras/common/lib/*.a
  # rm -rf "${pkgdir}"/opt/zextras/common/lib/*.la
}
