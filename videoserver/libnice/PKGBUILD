targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-libnice"
pkgver="0.1.19"
pkgrel="1"
pkgdesc="An implementation of the IETF's draft ICE (for p2p UDP data streams)"
pkgdesclong=(
  "An implementation of the IETF's draft ICE (for p2p UDP data streams)"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-openssl"
)
makedepends:apt=(
  "carbonio-openssl"
  "ninja-build"
  "python3-pip"
)
depends:yum=(
  "carbonio-openssl"
)
makedepends:yum=(
  "meson"
  "ninja-build"
  "openssl-devel"
)
section="libs"
priority="important"
sources=(
  "https://github.com/libnice/libnice/archive/${pkgver}.tar.gz"
)
hashsums=(
  "8bacba53e59ec6d72e9a398835c4df6446d5e0d71b2dabb7a19f6d6c5a72dcbe"
)

build:apt() {
  cd "${srcdir}/libnice-${pkgver}"
  export PKG_CONFIG_PATH="/opt/zextras/common/lib/pkgconfig"
  pip3 install meson
  meson \
    --werror \
    --warnlevel 2 \
    -Dgtk_doc=disabled \
    --prefix=/opt/zextras/common build \
    --libdir=lib
  meson compile -C build
}

build:yum() {
  cd "${srcdir}/libnice-${pkgver}"
  export PKG_CONFIG_PATH="/opt/zextras/common/lib/pkgconfig"
  meson \
    --werror \
    --warnlevel 2 \
    -Dgtk_doc=disabled \
    --prefix=/opt/zextras/common build \
    --libdir=lib
  meson compile -C build
}

package() {
  cd "${srcdir}/libnice-${pkgver}"
  DESTDIR="${pkgdir}" meson install -C build/
  # rm -rf "${pkgdir}"/opt/zextras/common/lib/*.a
  # rm -rf "${pkgdir}"/opt/zextras/common/lib/*.la
}
