#!/usr/bin/make -f
export DEB_BUILD_OPTIONS=nocheck

# Ensure rpath is set correctly
export DEB_LDFLAGS_MAINT_APPEND=-Wl,-rpath,OZCL

%:
	dh $@ --parallel
override_dh_auto_configure:
	cmake \
	-D CMAKE_C_FLAGS="-fno-strict-aliasing" \
	-D CMAKE_INSTALL_PREFIX=OZC \
	-D CMAKE_BUILD_TYPE='None' \
	-D LWS_WITH_HTTP2=ON \
	-D LWS_IPV6=ON \
	-D LWS_WITH_ZIP_FOPS=ON \
	-D LWS_WITH_SOCKS5=ON \
	-D LWS_WITH_RANGES=ON \
	-D LWS_WITH_ACME=ON \
	-D LWS_WITH_LIBUV=ON \
	-D LWS_WITH_LIBEV=ON \
	-D LWS_WITH_LIBEVENT=OFF \
	-D LWS_WITH_FTS=ON \
	-D LWS_WITH_THREADPOOL=ON \
	-D LWS_UNIX_SOCK=ON \
	-D LWS_WITH_HTTP_PROXY=ON \
	-D LWS_WITH_DISKCACHE=ON \
	-D LWS_WITH_LWSAC=ON \
	-D LWS_LINK_TESTAPPS_DYNAMIC=ON \
	-D LWS_WITHOUT_BUILTIN_GETIFADDRS=ON \
	-D LWS_WITHOUT_BUILTIN_SHA1=ON \
	-D LWS_WITH_STATIC=OFF \
	-D LWS_WITHOUT_CLIENT=OFF \
	-D LWS_WITHOUT_SERVER=OFF \
	-D LWS_WITHOUT_TESTAPPS=ON \
	-D LWS_WITHOUT_TEST_SERVER=OFF \
	-D LWS_WITHOUT_TEST_SERVER_EXTPOLL=ON \
	-D LWS_WITHOUT_TEST_PING=ON \
	-D LWS_WITHOUT_TEST_CLIENT=ON \
	-Wno-dev \
	-B build \
	-S .

override_dh_strip:
	dh_strip -pzimbra-libwebsockets
	dh_strip -Nzimbra-libwebsockets -Nzimbra-libwebsockets

override_dh_auto_install:
	make DESTDIR=$$(pwd)/debian/tmp install
